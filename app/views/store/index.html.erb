<p id="notice"><%= notice %></p>
<% cache ['store', Product.latest] do %>
	<% @products.each do |post| %>
	    <% cache ['product', post] do %>
  		<div class="col-md-4">
  			<div class="thumbnail">
    			<%= image_tag 'asd.jpg' %>
          <div class="caption">
            <h3><%= link_to post.name, post %></h3>
      			<p><%= number_to_currency(post.price) %></p>
      			<p><%= button_to 'Add to cart', line_items_path(product_id: post.id), {:class => 'btn-info btn', :remote => true} %></p>
          </div>
    		</div>
      </div>
    <% end %>
  <% end %>
<% end %>